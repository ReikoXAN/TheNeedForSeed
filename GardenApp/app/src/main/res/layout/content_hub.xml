<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/BackgroundColor"
    tools:context="com.jonnyg.gardenapp.Hub"
    tools:showIn="@layout/activity_hub">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnSeedSave"
        android:layout_marginTop="50dp"
        android:text="Seed Save"
        android:layout_marginRight="20dp"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:background="@color/colorSwatch5"
        android:src="@drawable/seed_savebtn_txt"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnCamera"
        android:layout_marginTop="50dp"
        android:text="Camera"
        android:background="@color/colorSwatch5"
        android:layout_toRightOf="@+id/btnSeedSave"
        android:src="@drawable/photo_camerabtn_txt"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnSeedShare"
        android:layout_below="@+id/btnSeedSave"
        android:layout_marginTop="10dp"
        android:text="Seed Share"
        android:background="@color/colorSwatch5"
        android:src="@drawable/seed_sharebtn_txt"
        android:scaleType="fitXY" />

</RelativeLayout>
